<%= rug_form_for(@page_block, create_url: "ric_website_admin.page_blocks_path", update_url: "ric_website_admin.page_block_path") do |f| %>
	<%= f.hidden_field :page_id %>
	<%= f.text_input_row :title, :text_field, localization: (RicWebsite.localization == true) %>
	<%= f.picker_row :key, nil, :value, :label, enable_null: true if RicWebsite.page_block_model.config(:enable_key) %>
	<%= f.text_area_row :content, localization: (RicWebsite.localization == true) %>

	<%= f.dropzone_many_row :text_attachments, :file, :text_attachments_path, :text_attachment_path, RicWebsite.text_attachment_model.all.order(id: :asc), RicWebsite.text_attachment_model %>

	<%= f.primary_button_row :submit %>
<% end %>