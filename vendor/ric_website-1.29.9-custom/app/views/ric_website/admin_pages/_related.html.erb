<%= rug_menu_for(@page, name: "related") do |m| %>
	<% if @page && !@page.new_record? %>
		<%= m.item t("headers.ric_website.admin_page_blocks.new"), new_page_block_path(page_id: @page.id), icon: "plus" %>
		<% if RicWebsite.enable_menus %>
			<%= m.item t("headers.ric_website.admin_page_menu_relations.edit"), edit_page_menu_relation_path(@page), icon: "plus" %>
		<% end %>
	<% end %>
<% end %>