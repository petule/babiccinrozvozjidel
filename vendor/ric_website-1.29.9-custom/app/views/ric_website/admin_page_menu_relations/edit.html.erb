<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_form_for(@page, url: page_menu_relation_path(@page)) do |f| %>
		<%
			columns = rug_columns
			columns.add_column_by_type(:name, :string)
			columns.add_column_by_type(:key, :string)
			columns.add_column_by_block(:checkbox, column_label: false) do |menu|
				check_box_tag "#{@page.class.model_name.param_key}[menus][#{menu.id.to_s}]", "1", (@page.menu_ids.include?(menu.id))
			end
		%>
		<%= rug_index_table_for(@menus, columns) %>
		<%= f.primary_button_row :submit %>
	<% end %>
<% end %>