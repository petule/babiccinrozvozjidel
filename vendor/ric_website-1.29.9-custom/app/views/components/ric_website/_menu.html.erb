<div class="menu clearfix">
	<%= nested_ul(@menu.items) do |item| %>
		<% 
			css_class = (item.respond_to?(:css_class) ? item.css_class : "").to_s
			css_class += (item.respond_to?(:active_url?) && item.active_url?(request) ? " active" : "") 
			url = item.url
			url = "#" if url.blank?
		%>
		<%= link_to item.title, url, class: css_class, target: (item.respond_to?(:target) ? item.target : "") %>
	<% end %>
</div>