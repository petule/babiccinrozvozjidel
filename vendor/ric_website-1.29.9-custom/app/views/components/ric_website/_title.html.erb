<% 
	if !@title.subtitles.blank?
		subtitles = @title.subtitles.reverse.join(@title.config(:subtitle_separator).to_s)
	else
		subtitles = nil
	end
%>
<% if !subtitles.blank? %>
	<%= subtitles + @title.config(:main_separator).to_s + @title.config(:main_title).to_s  %>
<% elsif !@title.config.main_motto.blank? %>
	<%= @title.config(:main_title).to_s + @title.config(:motto_separator).to_s + @title.config(:main_motto).to_s %>
<% else %>
	<%= @title.config(:main_title).to_s %>
<% end %>