<ul>
  <% if customer_signed_in? %>
      <li>
        <%= link_to(edit_customer_registration_path(current_customer)) do %>
            <span class="title"><%= current_customer.email %></span>
        <% end %>
      </li>
      <li>
        <%= link_to(destroy_customer_session_path(current_customer), method: :delete) do %>
            <span class="title">Odhlásit</span>
        <% end %>
      </li>
  <% else %>
      <li>
        <%= link_to(new_customer_session_path) do %>
            <span class="title">Přihlásit se</span>
        <% end %>
      </li>
      <li>
        <%= link_to(new_customer_registration_path) do %>
            <span class="title">Registrovat se</span>
        <% end %>
      </li>
  <% end %>
</ul>