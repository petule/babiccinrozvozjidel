<%= render layout: "ric_admin/layouts/with_right_side" do %>
	<%= rug_index_table_for(@products, { 
		name: :string,
		default_product_category: { type: :belongs_to, label: :name }, 
		content: { type: :text, strip_tags: true },
		amount: :string,
		price: :integer
	}, paths: {
		show: :product_path,
		edit: :edit_product_path,
		move: :move_product_path,
		destroy: :product_path
	}, moving: true, pagination: true, summary: true ) %>
<% end %>