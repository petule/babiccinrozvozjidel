<ul class="languages">
	<% current_locale, current_path = RicWebsite::Helpers::LocaleHelper.disassemble(request.fullpath) %>
	<% I18n.available_locales.each do |locale| %>
		<%
			css_class = locale.to_s
			css_class += " active" if I18n.locale.to_sym == locale.to_sym
		%>
		<li class="<%= css_class %>">
			<%= link_to(RicWebsite::Helpers::LocaleHelper.assemble(locale, current_path), class: css_class) do %>
				<span class="title"><%= t("views.languages.#{locale.to_s}") %></span>
			<% end %>
		</li>
	<% end %>
</ul>