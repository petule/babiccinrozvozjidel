<%= rug_menu_for(nil, name: "actions") do |m| %>
	<%= m.item t("devise.action.sign_in").capitalize, new_session_path(resource_name), icon: "login", active: (controller_name == 'sessions') %>
	<% if devise_mapping.registerable? %>
		<%= m.item t("devise.action.sign_up").capitalize, new_registration_path(resource_name), icon: "user-add", active: (controller_name == 'registrations') %>
	<% end %>
	<% if devise_mapping.recoverable? %>
		<%= m.item t("devise.action.reset_password").capitalize, new_password_path(resource_name), icon: "lifebuoy", active: (controller_name == 'passwords') %>
	<% end %>
<% end %>
