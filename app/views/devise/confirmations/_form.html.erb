<%= rug_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>	
	<%= f.text_input_row :email, :email_field, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
	<%= f.primary_button_row :submit, label: t("devise.action.confirm") %>
<% end %>
